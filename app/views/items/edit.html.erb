<h1>Edit <%=link_to @item.name, "/items/#{@item.id}" %></h1>

<center>
  <%= form_with model: @item, url: "/items/#{@item.id}", local: true, method: :patch do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name%>

    <%= f.hidden_field :path, value: @path %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :price %>
    <%= f.text_field :price, value: "#{@item.price.round(2)}"%>

    <%= f.label :image %>
    <%= f.text_field :image %>

    <%= f.label :inventory %>
    <%= f.text_field :inventory %>

    <%= f.submit('Update Item') %>
  <% end %>
</center>
