<h1>Create New Item For <%=link_to @merchant.name, "/merchants/#{@merchant.id}" %></h1>

<center>
  <%= form_with model: @item, url: "/merchants/#{@merchant.id}/items", local: true, method: :post do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name%>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.label :image %>
    <%= f.text_field :image %>

    <%= f.label :inventory %>
    <%= f.text_field :inventory %>

    <%= f.submit('Create Item') %>
  <% end %>
</center>
