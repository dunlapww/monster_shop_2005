<%= @merchant.name %><br>
<%= @merchant.address %><br>
<%= @merchant.city %><br>
<%= @merchant.state %><br>
<%= @merchant.zip %><br>
<%= link_to 'My Merchant Items', '/merchant/items' if !current_admin? %>
<%= link_to 'Merchant Items', admin_merchant_items_path(@merchant) if current_admin? %>

<% @merchant.pending_orders.each do |order| %>
  <div id="order-<%= order.id %>">
    Order: <%= link_to "#{order.id}", "/merchant/orders/#{order.id}" %>
    <%= order.created_at.to_date %>
    <%= order.merchant_items_qty(@merchant.id) %>
    <%= order.merchant_items_value(@merchant.id) %>
  </div>
<% end%>
