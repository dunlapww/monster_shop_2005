<% @user.orders.each do |order| %>
  <section id="order-<%= order.id %>">
    <p><%= link_to "Order-#{order.id}", "/profile/orders/#{order.id}" %></p>
    <p>Created at: <%= order.created_at %></p>
    <p>Updated at: <%= order.updated_at %></p>
    <p>Status: <%= order.status %></p>
    <p>Item Quantity: <%= order.quantity_of_items %></p>
    <p>Total: <%= order.grandtotal %></p>
  </section>
<% end %>
