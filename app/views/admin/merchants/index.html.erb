<h1 align = "center">Merchants</h1>
<p align="center"><%= link_to "New Merchant", "/merchants/new" %></p>
<section class = "grid-container">
  <% @merchants.each do |merchant|%>
    <section class = "grid-item">
      <div id="merchant-<%= merchant.id %>">
        <h2><%=link_to merchant.name, "/admin/merchants/#{merchant.id}" %></h2>
        <%= button_to "Disable Merchant", "/admin/merchants/#{merchant.id}", method: :patch if merchant.active? %><br>
        <%= button_to "Enable Merchant", "/admin/merchants/#{merchant.id}", method: :patch if !merchant.active? %><br>
      </div>
    </section>
  <% end %>
</section>
