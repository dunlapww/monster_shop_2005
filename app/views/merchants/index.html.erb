<h1 align = "center">Merchants</h1>
<p align="center"><%= link_to "New Merchant", "/merchants/new" %></p>
<section class = "grid-container">
  <% @merchants.each do |merchant|%>
    <section class = "grid-item">
      <h2><%=link_to merchant.name, "/merchants/#{merchant.id}" unless @admin %></h2>
      <h2><%=link_to merchant.name, "/admin/merchants/#{merchant.id}" if @admin %></h2>
    </section>
  <% end %>
</section>
